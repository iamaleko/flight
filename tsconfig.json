{
  "include": ["./src/ts/**/*"],
  "compilerOptions": {
    "paths": {
      "@lib/*": ["./src/ts/lib/*"],
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public/js",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
